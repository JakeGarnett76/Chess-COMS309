<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reglogin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <application
        android:name="com.example.reglogin.app.AppController"

        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RegLogin">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.RegLogin.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"> </activity>
        <activity android:name=".RegisterActivity"> </activity>
        <activity android:name=".HomeActivity"> </activity>
        <activity android:name=".HowToPlayActivity"> </activity>
        <activity android:name=".SettingsActivity"> </activity>
        <activity android:name=".WaitingRoomActivity"> </activity>
        <activity android:name=".TwoPlayerChessboard"> </activity>
        <activity android:name=".howtopieces.HowToPawnActivity"></activity>
        <activity android:name=".howtopieces.HowToRookActivity"></activity>
        <activity android:name=".howtopieces.HowToKnightActivity"></activity>
        <activity android:name=".howtopieces.HowToBishopActivity"></activity>
        <activity android:name=".howtopieces.HowToKingActivity"></activity>
        <activity android:name=".howtopieces.HowToQueenActivity"></activity>
    </application>

</manifest>